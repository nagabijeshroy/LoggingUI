</head>
<body>
   
    <form id="form1" action="/Home/LogData" method="post">
        <div id="Main_Page">
            <div id="header">
                <img src="../Images/s_poRCNA.png" alt="logo" height="75" width="75" />App Config Logger
            </div>
            <div id="Content">
                <div id="Button_Menu">

                    <span>
                        Severity:
                        <select name="Severity">
                            <option value="All">All Severities</option>
                            <option value="2">2</option>
                            <option value="8">8</option>
                            <option value="Critical">Critical</option>
                            <option value="Error">Error</option>
                            <option value="Information">Information</option>
                            <option value="Verbose">Verbose</option>
                            <option value="Warning">Warning</option>
                        </select>
                    </span>
                    <span>
                        Title:<input type="text" name="title" id="title" />
                    </span>
                    <span>
                        Machine Name:<input type="text" name="machineName" id="machineName" />
                    </span>
                    <span>
                        From Date:<input type="text" name="FromDate" id="FromDate" class="datefield" />
                    </span>
                    <span>
                        To Date:<input type="text" name="ToDate" id="ToDate" class="datefield" />
                    </span>
                    <span>
                        <input type="submit" id="submitButton" value="Search" /><br />
                    </span>
                </div>
                @RenderBody()
            </div>
        </div>
    </form>
    
</body>
</html>
